{{template "base/head" .}}
<div class="page-content organization times">
	{{template "org/header" .}}
	<div class="ui container">
		{{template "base/alert" .}}
		<form>
			<div class="ui grid">
				<div class="three wide column">
					{{template "org/times/daterange" .}}
				</div>
				<div class="thirteen wide column">
					{{template "org/times/submenu" .}}
					<table class="ui table">
						<thead>
						<tr>
							<th>{{$.locale.Tr "repository"}}</th>
							<th>{{$.locale.Tr "org.times.milestone"}}</th>
							<th>{{$.locale.Tr "org.times.time"}}</th>
						</tr>
						</thead>
						<tbody>
						{{range $.results}}
						<tr>
							<td>
								{{if not .HideRepoName}}
									{{svg "octicon-repo" 16 "mr-2"}}<a href="{{$.Org.HomeLink}}/{{.RepoName}}/issues">{{.RepoName}}
								{{end}}
							</td>
							<td>
								{{if .Name}}
									{{svg "octicon-milestone" 16 "mr-2"}}<a href="{{$.Org.HomeLink}}/{{.RepoName}}/milestone/{{.ID}}">{{.Name}}</a></td>
								{{else}}
									â€”
								{{end}}
							<td>
								{{svg "octicon-clock" 16 "mr-2"}}
								{{.SumTime | Sec2Hour}}
							</td>
						</tr>
						{{end}}
						</tbody>
					</table>
				</div>
			</div>
		</form>
	</div>
</div>
{{template "base/footer" .}}
