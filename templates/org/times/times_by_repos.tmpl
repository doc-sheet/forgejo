{{template "base/head" .}}
<div class="page-content organization times">
	{{template "org/header" .}}
	<div class="ui container">
		{{template "base/alert" .}}
		<form>
			<div class="ui grid">
				<div class="three wide column">
					{{template "org/times/daterange" .}}
				</div>
				<div class="thirteen wide column">
					{{template "org/times/submenu" .}}
					<table class="ui table">
						<thead>
						<tr>
							<th>{{$.i18n.Tr "Repository"}}</th>
							<th>{{$.i18n.Tr "Time"}}</th>
						</tr>
						</thead>
						<tbody>
						{{range $.results}}
						<tr>
							<td>{{svg "octicon-repo" 16 "mr-2"}}<a href="{{$.Org.HomeLink}}/{{.Name}}/issues">{{.Name}}</a></td>
							<td>
								{{svg "octicon-clock" 16 "mr-2"}}
								{{.SumTime | Sec2Hour}}
							</td>
						</tr>
						{{end}}
						</tbody>
					</table>
				</div>
			</div>
		</form>
	</div>
</div>
{{template "base/footer" .}}
