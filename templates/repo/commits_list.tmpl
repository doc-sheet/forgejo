<div class="ui attached table segment">
	<table class="ui very basic striped fixed table single line" id="commits-table">
		<thead>
			<tr>
				<th class="four wide">{{.i18n.Tr "repo.commits.author"}}</th>
				<th class="two wide sha">SHA1</th>
				<th class="seven wide message">{{.i18n.Tr "repo.commits.message"}}</th>
				<th class="three wide right aligned">{{.i18n.Tr "repo.commits.date"}}</th>
			</tr>
		</thead>
		<tbody class="commit-list">
			{{ $r:= List .Commits}}
			{{range $r}}
				{{template "repo/commits_list_line" dict "commit" . "root" $ "class" "created"}}
			{{end}}
			{{if .ShowsNegativeCommits}}
				<tr class="inverse-explanation"><td colspan="4">{{.i18n.Tr "repo.commits.shown_inverse_explanation"}}<td></tr>
				{{ $r:= List .NewCommitsOnBase}}
				{{range $r}}
					{{template "repo/commits_list_line" dict "commit" . "root" $ "class" "removed"}}
				{{end}}
			{{end}}
		</tbody>
	</table>
</div>
